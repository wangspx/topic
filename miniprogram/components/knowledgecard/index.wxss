@import "../../app.wxss";

.card {
  background-color: #fff;
  margin: auto;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  box-sizing: border-box;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.09);
}

.card-body {
  flex: 8;
  overflow: hidden;
}

.card-header {
  flex: 1;
}

.card-footer {
  flex: 1;
  border-top: 1rpx solid rgba(0,0,0,.1);
}

.row {
  height: 100%;
  display: flex;
}

.col {
  flex: 1;
  padding: 8rpx;
  display: flex;
  flex-flow: column;
  align-items: center;
  justify-content: center;
}
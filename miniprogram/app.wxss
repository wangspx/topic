@import '/style/weui.wxss';
@import '/style/util.wxss';
@import '/style/fontawesome.wxss';

page {
  height: 100%;
  width: 100%;
  background-color: #F7F7F7;
}

page::after{
  content: '';
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 2rpx;
  border-bottom: 1rpx solid rgba(0,0,0,.1);
  z-index: 9999;
}

.container {
  height: 100%;
  width: 100%;
  box-sizing: border-box;
}

.avatar {
  display: flex;
}

.avatar-img {
  box-sizing: border-box;
  margin: 0;
  padding: 0;

  display: inline-block;
  overflow: hidden;

  white-space: nowrap;
  text-align: center;
  vertical-align: middle;
  background: #ccc;
  width: 96rpx;
  height: 96rpx;
  border-radius: 8rpx;
}

.avatar-text {
  margin-left: 20rpx;
}
